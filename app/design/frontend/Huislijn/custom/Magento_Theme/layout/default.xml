<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <body>
    <referenceContainer name="header.container">
        <block class="Magento\Cms\Block\Block" name="header_tel" before="header-wrapper">
            <arguments>
                <argument name="block_id" xsi:type="string">header_tel</argument>
            </arguments>
        </block>
        <block class="Magento\Cms\Block\Block" name="hamburg_content" before="header_tel">
            <arguments>
                <argument name="block_id" xsi:type="string">hamburg_content</argument>
            </arguments>
        </block>
    </referenceContainer>
    <referenceContainer name="header.panel">
        <block class="Magento\Cms\Block\Block" name="header_custom_toggle">
            <arguments>
                <argument name="block_id" xsi:type="string">header_custom_toggle</argument> 
            </arguments>
        </block>
        <block class="Magento\Framework\View\Element\Template" name="account_menu" template="Magento_Theme::html/account_menu.phtml"/>
    </referenceContainer> 
    <referenceContainer name="footer">
        <block class="Magento\Cms\Block\Block" name="brand-block" before="-">
            <arguments>
                <argument name="block_id" xsi:type="string">footer_block_link</argument>
            </arguments>
        </block>
        <block class="Magento\Cms\Block\Block" name="copyright-block" after="-">
            <arguments>
                <argument name="block_id" xsi:type="string">copyright-block</argument>
            </arguments>
        </block>
    </referenceContainer>
   	<referenceBlock name="footer_links" remove="true" />
    <referenceBlock name="copyright" remove="true"/>
    <referenceBlock name="form.subscribe" remove="true" />    
   <!--  <referenceBlock name="minicart" remove="true"/> -->
    <move element="logo" destination="header.panel" before="header.links"/>
    <move element="top.search" destination="header.panel" before="header.links"/>
    <move element="header_custom_toggle" destination="header.panel" after="header.links"/>
    <move element="navigation.sections" destination="header.panel" after="logo"/>
    <move element="quotecart" destination="header.panel" before="header_custom_toggle"/>
    <move element="minicart" destination="header.panel" before="quotecart"/>
    <referenceBlock name="catalog.compare.sidebar" remove="true" />
    <referenceBlock name="wishlist_sidebar" remove="true" />
    <referenceBlock name="catalogsearch.product.addto.compare" remove="true"/>
    <referenceBlock name="catalogsearch.product.addto.wishlist" remove="true"/>
    
    <referenceBlock name="store.links" remove="true" />
    <referenceBlock name="customer-account-navigation-wish-list-link" remove="true"/>
    <referenceBlock name="customer-account-navigation-billing-agreements-link" remove="true"/>
    <referenceBlock name="customer-account-navigation-orders-link" remove="true"/>
    <referenceBlock name="customer-account-navigation-address-link" remove="true"/>
    <referenceBlock name="customer-account-navigation-account-edit-link" remove="true"/>
    <referenceBlock name="customer-account-navigation-my-credit-cards-link" remove="true"/>
    <referenceBlock name="customer-account-navigation-delimiter-1" remove="true"/>
    <referenceBlock name="customer-account-navigation-delimiter-2" remove="true"/>
    <referenceBlock name="customer-account-navigation-downloadable-products-link" remove="true"/>
    <referenceBlock name="customer-account-navigation-product-reviews-link" remove="true"/>
    <referenceBlock name="customer-account-navigation-newsletter-subscriptions-link" remove="true"/>
    <referenceBlock name="top.links">
        <referenceBlock name="wish-list-link" remove="true" />          <!--for WishList Link-->
    </referenceBlock>
    <referenceBlock name="customer-account-navigation-quote-subscriptions-link" remove="true" />
            <referenceBlock name="sale.reorder.sidebar" remove="true"/>

  </body>
</page>