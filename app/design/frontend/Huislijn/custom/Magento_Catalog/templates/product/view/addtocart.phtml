<script>
    require(['jquery'], function ($) {
        $(document).ready(function() {
            $(document).on('click', '.control.qty-group .qty-minus', function(){
                var qty_field = $(this).siblings('input.qty'),
                    current_qty_value = +qty_field.val();
                if(current_qty_value > 1){
                    qty_field.val(--current_qty_value);
                }
            });
            $(document).on('click', '.control.qty-group .qty-plus', function(){
                var qty_field = $(this).siblings('input.qty'),
                    current_qty_value = +qty_field.val();
                qty_field.val(++current_qty_value);
            });
        });
    });
</script>
