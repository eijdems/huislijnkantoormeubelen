                if (orderstatus != '' || orderstatus.lenght != 0) {
                    var orderstatusarray=orderstatus.split(',');
                    var currentorderstatus='<?php echo $order->getStatus(); ?>';
                    if($.inArray(currentorderstatus, orderstatusarray) !== -1) {
                        var productattachments = '<?php if (isset($productAttachment) && !empty($productAttachment)) {
                            echo addslashes(json_encode($productAttachment));
                                                  } ?>';
                        var productattachment = $.parseJSON(productattachments);
                        $.each(productattachment, function(index, value) {
                            $("#order-item-row-"+index).each(function () {
                                $(this).find('td:eq(0)').after('<td class="col attachment"></td>');
                            });
                            var html='';
                            $.each(value, function(index1, value1) {
                                var dlink='<?php echo $this->_storeManager->getStore()->getUrl('productattachments') . 'index/download?id='; ?>'+value1.productattachments_id;
                                html='<a class="downloadlink" id="'+value1.productattachments_id+'" href="'+dlink+'">'+value1.file_icon+'&nbsp;<b>'+value1.title+'</b></a>  Size: (' +value1.file_size+ ')';
                                if (value1.link_url != '' || value1.link_url.lenght != 0) {
                                    var linkimg='<?php /** @noEscape */  echo $blockName->getViewFileUrl('FME_Productattachments::images/link.jpg') ?>';
                                    if (value1.link_title != null) {
                                        html+='<br><a href="'+value1.link_url+'"><img src="'+linkimg+'" width="18"/>&nbsp;<b>'+value1.link_title+'</b></a>';
                                    } else {
                                        html+='<br><a href="'+value1.link_url+'"><img src="'+linkimg+'" width="18"/>&nbsp;<b>Productattachment Link</b></a>';
                                    }
                                }
                                $("#order-item-row-"+index).each(function () {
                                    $(this).find('td:eq(1)').append(html);
                                });
                            });
                        });
                    }
                } else {
                    var productattachments = '<?php if (isset($productAttachment) && !empty($productAttachment)) {
                        echo addslashes(json_encode($productAttachment));
                                              } ?>';
                    //console.log(productattachments);
                    var productattachment = $.parseJSON(productattachments);
                    $.each(productattachment, function(index, value) {
                        $("#order-item-row-"+index).each(function () {
                            $(this).find('td:eq(0)').after('<td class="col attachment"></td>');
                        });
                        var html='';
                        $.each(value, function(index1, value1) {
                            var dlink='<?php echo $this->_storeManager->getStore()->getUrl('productattachments') . 'index/download?id='; ?>'+value1.productattachments_id;
                            html='<a class="downloadlink" id="'+value1.productattachments_id+'" href="'+dlink+'">'+value1.file_icon+'&nbsp;<b>'+value1.title+'</b></a>  Size: (' +value1.file_size+ ')';
