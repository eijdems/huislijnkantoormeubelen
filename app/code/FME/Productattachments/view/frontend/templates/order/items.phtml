                                if (value1.link_title != null) {
                                    html+='<br><a href="'+value1.link_url+'"><img src="'+linkimg+'" width="18"/>&nbsp;<b>'+value1.link_title+'</b></a>';
                                } else {
                                    html+='<br><a href="'+value1.link_url+'"><img src="'+linkimg+'" width="18"/>&nbsp;<b>Productattachment Link</b></a>';
                                }
                            }
                            $("#order-item-row-"+index).each(function () {
                                $(this).find('td:eq(1)').append(html);
                            });
                        });
                    });
                }
            }
        });
    });
