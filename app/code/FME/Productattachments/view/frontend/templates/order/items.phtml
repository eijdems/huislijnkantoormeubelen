<script>
    require(["underscore", "jquery", "jquery/ui"], function(_, $) {
        $(document).ready(function() {
            var resultArray =[];
            $("#my-orders-table tbody").find('tr').filter(function() {
                console.log($(this).attr('id').trim());
                var rawArray = $(this).attr('id').trim().split('-');
                resultArray.push(rawArray[3]);
            });
            var colenable='<?php echo $blockName->_config->getValue('productattachments/orderview/orderviewenabled'); ?>';
            if (colenable == 1) {
                var coltitle='<?php echo $blockName->_config->getValue('productattachments/orderview/orderviewtitle'); ?>';
