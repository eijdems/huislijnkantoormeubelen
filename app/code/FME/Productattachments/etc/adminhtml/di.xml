<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Magento\Catalog\Ui\DataProvider\Product\Form\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="custom-fieldset" xsi:type="array">
                    <item name="class" xsi:type="string">FME\Productattachments\Ui\DataProvider\Product\Form\Modifier\CompositeAttachments</item>
                    <item name="sortOrder" xsi:type="number">125</item>
                </item>
            </argument>
        </arguments>
    </virtualType>
     <virtualType name="FMEProductattachmentsPool" type="Magento\Ui\DataProvider\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="cms-fieldset" xsi:type="array">
                    <item name="class" xsi:type="string">FME\Productattachments\Ui\DataProvider\Cms\Form\Modifier\CmsAttachments</item>
                    <item name="sortOrder" xsi:type="number">126</item>
                </item>
            </argument>
        </arguments>
    </virtualType>
    <type name="FME\Productattachments\Model\Page\DataProvider">
        <arguments>
            <argument name="pool" xsi:type="object">FMEProductattachmentsPool</argument>
        </arguments>
    </type>
    <preference for="Magento\Framework\Mail\Template\TransportBuilder" type="FME\Productattachments\Mail\Template\MailTransportBuilder"></preference>
    <preference for="Magento\Sales\Model\Order\Email\SenderBuilder" type="FME\Productattachments\Mail\SenderBuilder"/>
    <preference for="Magento\Sales\Model\Order\Email\Sender\OrderSender" type="FME\Productattachments\Mail\Sender\OrderSender"/>
    <preference for="Magento\Sales\Model\Order\Email\Container\Template" type="FME\Productattachments\Mail\Container\Template"/>
    <preference for="Magento\Cms\Model\Wysiwyg\Config" type="FME\Productattachments\Model\Config\Source\Config"/>
</config>